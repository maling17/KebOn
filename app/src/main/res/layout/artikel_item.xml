<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:background="@drawable/rounded_layout_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_judul_artikel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/judul_artikel"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/linearLayout9"
            app:layout_constraintTop_toTopOf="@+id/linearLayout9" />

        <TextView
            android:id="@+id/tv_author_artikel"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/author"
            android:textColor="@color/colorGreen"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@+id/linearLayout9"
            app:layout_constraintTop_toBottomOf="@+id/tv_judul_artikel" />

        <View
            android:id="@+id/view11"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/cirlce_green"
            app:layout_constraintStart_toEndOf="@+id/tv_author_artikel"
            app:layout_constraintTop_toBottomOf="@+id/tv_judul_artikel" />

        <TextView
            android:id="@+id/tv_tanggal_rilis_artikel"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/tgl"
            android:textColor="@color/colorGreen"
            android:textSize="11sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/view11"
            app:layout_constraintTop_toBottomOf="@+id/tv_judul_artikel" />


        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:scaleType="fitXY"
                android:background="@drawable/rounded_layout"
                android:id="@+id/iv_photo_artikel"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>